
<div class="catalog">
    <%@products.each do |product|%>
        <div class="itemCatalog">
          <div class="description">
            <%=image_tag(product.image.url)%>
            <p><%=product.title %></p>
            <table>
              <tr>
                <%product.colors.each do |color|%>
                <td bgcolor="<%=color.color%>">
                  <%=radio_button("post", "category", "rails")%>
                </td>
                <%end%>
              </tr>
            </table>
            <%=select_tag "colors", options_from_collection_for_select(product.colors, "id", "title")%>
            <p class="price">
              <span class="rub">
                <%=product.price %>
                <%=icon('rub')%>
              </span>
            <%=link_to(line_items_url(:id => product.id), html_options = {method: :post},remote: true) do %>
                <span class="plus">Добавить <i class="fa  fa-plus"></i></span>
            <%end%>
            </p>
          </div>
        </div>
    <%end %>
</div>