        <div class="logo"><%= link_to image_tag(image_url('logo.png')), root_path %></div>
        <div class="contacts">
          <span>Связь с нами :</span><br>
          <a href="tel:+7-964-570-85-98">+7-964-570-85-98</a>
        </div>
        <div class="buy">
          <%= render('common/buy') %>
        </div>
        <div class="horizontal_nav">
          <ul>
            <li><a href="<%=main_index_path%>">Главная</a></li>
            <li><a href="<%=category_products_path(Category.new.first_category.id)%>">Каталог</a></li>
            <li><a href="#">Контакты</a></li>
            <li><a href="#">FAQ</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <%=yield%>
  <div class="row">
    <div class="footer">
        <span class="copyright">
        Copyright © 2015. svoyadoska.ru All rights reserved
        Developed by rodosabc</span>
    </div>
  </div>
